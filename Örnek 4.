#include <stdio.h>
#include <stdlib.h>



int main()
 {
    int a = 5;
    
    printf("a'nin degeri: %d\n\n", a);
    printf("a'nin adresi: %p\n", &a);
    printf("10'luk tabanda: %u\n\n", &a);
    
    int * p;
    
    p = &a;
    
    printf("p : %p\n", p);
    printf("*p : %d\n\n", *p);
    
    *p = 32;
    
    printf("a'nin degeri: %d\n", a);
return 0;
}
